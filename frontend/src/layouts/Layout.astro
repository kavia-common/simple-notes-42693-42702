---
import ThemeToggle from '../components/ThemeToggle.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Ocean Notes</title>
		<meta name="theme-color" content="#2563EB" />
	</head>
	<body>
		<ThemeToggle />
		<slot />
	</body>
</html>

<style>
	:root {
		/* Ocean Professional - Light */
		--bg-color: #f9fafb;
		--surface: #ffffff;
		--text-color: #111827;
		--text-secondary: #4b5563;
		--border-color: rgba(0, 0, 0, 0.1);
		--card-bg: rgba(255, 255, 255, 0.98);
		--card-hover-bg: rgba(255, 255, 255, 0.9);
		--shadow-color: rgba(0, 0, 0, 0.06);
		--shadow-hover-color: rgba(0, 0, 0, 0.12);
		--primary: #2563EB; /* blue */
		--secondary: #F59E0B; /* amber */
		--error: #EF4444;
	}

	body.dark-theme {
		/* Ocean Professional - Dark */
		--bg-color: #0b1220;
		--surface: #0f172a;
		--text-color: #e5e7eb;
		--text-secondary: #9ca3af;
		--border-color: rgba(255, 255, 255, 0.12);
		--card-bg: rgba(15, 23, 42, 0.95);
		--card-hover-bg: rgba(15, 23, 42, 0.88);
		--shadow-color: rgba(0, 0, 0, 0.5);
		--shadow-hover-color: rgba(0, 0, 0, 0.6);
	}

	html, body {
		margin: 0;
		width: 100%;
		height: 100%;
		background-color: var(--bg-color);
		color: var(--text-color);
		transition: background-color 0.3s ease, color 0.3s ease;
		font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Inter, Helvetica, Arial, "Apple Color Emoji","Segoe UI Emoji";
	}
</style>
